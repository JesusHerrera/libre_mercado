p#notice = notice

p
  strong Description:
  = @offer.description
p
  strong Price:
  = @offer.price
p
  - if @offer.pictures.present?
    strong
      | Fotos:
    - @offer.pictures.each do |pic|
      = image_tag(pic.picture, size: '100x100')

= link_to 'Editar', edit_offer_path(@offer)

= nested_comments @offer.comments
= render "comments/form"
