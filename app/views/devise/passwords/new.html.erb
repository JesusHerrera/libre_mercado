<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form'}) do |f| %>
    <h3>Olvidaste tu contraseña?</h3>
    <p>Te enviaremos un mail con las instrucciones para recuperar tu contraseña.</p>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
    </div>
     <%= f.submit 'Resetea tu contraseña', :class => 'button right' %>
  <% end %>
</div>
